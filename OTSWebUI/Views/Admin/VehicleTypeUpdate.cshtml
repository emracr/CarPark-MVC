@model Entities.Concrete.VehicleType
@{
    ViewBag.Title = "VehicleTypeUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">

    <div class="subDiv">
        <h2 class="vehicleTypeUpdateHeaderText">Araç Tipi Güncelleme</h2>
        <div class="vehicleTypeUpdateForm mt-5">
            @using (Html.BeginForm("VehicleTypeUpdate", "Admin", FormMethod.Post, new { @autocomplete = "off" }))
            {
                <div class="col-md-12 mt-4">
                    <label class="form-label" style="float:left;">Id</label>
                    @Html.TextBoxFor(g => g.Id, new { @class = "form-control", @type = "text", @disabled = "disabled" })
                </div>
                <div class="col-md-12 mt-4">
                    <label for="vehicleType" class="form-label" style="float:left;">Araç tipi</label>
                    @Html.TextBoxFor(g => g.AracTuru, new { @class = "form-control", @id = "vehicleType", @type = "text", @required = "required", @maxlength = "50" })
                </div>
                <div class="text-center">
                    <a href="@Url.Action("VehicleTypes","Admin")" class="btn btn-warning mt-4" style="width:110px;margin-right:10px;color:dimgray;">İptal</a>
                    <button type="submit" class="btn btn-primary mt-4 w-25">Güncelle</button>

                </div>
            }
        </div>
    </div>

</div>


@section CssFile{
    <link href="@Url.Content("~/Contents/AdminVehicleTypeUpdate.css")" rel="stylesheet" type="text/css" /> }


