@model Entities.Concrete.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr-TR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Contents/AdminLogin.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <title>Admin Giriş</title>
</head>
<body>
    <div class="divMain">
        <h2 class="header">Admin Girişi</h2>
        <div class="divLogin">
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @autocomplete = "off" }))
            {
            <div style="margin-top:80px;">
                <div class="form-group mt-5 pt-3">
                    <div class="loginFailedAlert">
                        @if (ViewBag.LoginFailed != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.LoginFailed
                            </div>
                        }
                    </div>
                    <label for="userNameInput">Kullanıcı adı</label>
                    @Html.TextBoxFor(a => a.UserName, new { @id = "userNameInput", @class = "form-control", @type = "text", @required="required", @maxlength = "30" })
                </div>
                <div class="form-group mt-4 pt-2">
                    <label for="passwordInput">Parola</label>
                    @Html.TextBoxFor(a => a.Password, new { @id = "passwordInput", @class = "form-control", @type = "password", @required = "required", @maxlength = "30" })
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-primary">Giriş</button>
                </div>
            </div>
            }
        </div>
    </div>
</body>
</html>