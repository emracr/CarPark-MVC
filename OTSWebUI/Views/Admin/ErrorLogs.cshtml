@model List<Entities.Concrete.ErrorLog>
@{
    ViewBag.Title = "ErrorLogs";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">

    <div class="subDiv">
        <h2 class="errorLogsHeaderText">Hata Logları</h2>
        <table id="tableErrorLogs" class="table table-hover">
            <thead>
                <tr>
                    <th>Hata Tipi</th>
                    <th>Hata Kaynağı</th>
                    <th>Hata Mesajı</th>
                    <th>Hata Kodu</th>
                    <th>Hatanın Tarihi</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var errorLog in Model)
                {
                    <tr>
                        <td>@errorLog.Type</td>
                        <td>@errorLog.Source</td>
                        <td>@errorLog.Message</td>
                        <td>@errorLog.StatusCode</td>
                        <td>@errorLog.TimeUtc.ToLocalTime()</td>
                        <td><a href="/Admin/ErrorLogDetails/@errorLog.ErrorId" class="errorDetailLink"><i class="fas fa-info-circle"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />


<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tableErrorLogs').DataTable();
</script>

@section CssFile{
    <link href="@Url.Content("~/Contents/AdminErrorLogs.css")" rel="stylesheet" type="text/css" /> }


