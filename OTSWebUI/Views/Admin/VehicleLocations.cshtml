@model List<Entities.Concrete.VehicleLocation>
@{
    ViewBag.Title = "VehicleLocations";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">
    @if (TempData["VehicleLocationAddSuccess"] != null)
    {
        <div class="vehicleLocationCrudResultSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["VehicleLocationAddSuccess"]</p>
        </div>
    }
    @if (TempData["VehicleLocationUpdateSuccess"] != null)
    {
        <div class="vehicleLocationCrudResultSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["VehicleLocationUpdateSuccess"]</p>
        </div>
    }
    @if (TempData["VehicleLocationDeleteSuccess"] != null)
    {
        <div class="vehicleLocationCrudResultSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["VehicleLocationDeleteSuccess"]</p>
        </div>
    }
    <div class="subDiv">
        <h2 class="vehicleLocationsHeaderText">Araç Konumları</h2>
        <table id="tableVehicleLocations" class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Konum</th>
                    <th>Kat</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicleLocation in Model)
                {
                    <tr>
                        <td>@vehicleLocation.Id</td>
                        <td>@vehicleLocation.Location</td>
                        <td>@vehicleLocation.Floor</td>
                        <td><a href="/Admin/VehicleLocationUpdate/@vehicleLocation.Id" class="vehicleLocationUpdateIcon"><i class="fas fa-edit"></i></a></td>
                        <td><a href="/Admin/VehicleLocationDelete/@vehicleLocation.Id" class="vehicleLocationDeleteIcon"><i class="fas fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="vehicleLocationsAddDiv">
        <a href="@Url.Action("VehicleLocationAdd","Admin")" class="btn btn-success">Araç Konumu Ekle</a>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tableVehicleLocations').DataTable();
</script>

@section CssFile{
    <link href="@Url.Content("~/Contents/AdminVehicleLocations.css")" rel="stylesheet" type="text/css" /> }

