@model Entities.Concrete.Admin
@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row justify-content-center mainDiv">
    @if (ViewBag.ProfileUpdateSuccess != null)
    {
        <div class="profileUpdateSuccessMessaege mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.ProfileUpdateSuccess
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (TempData["PasswordUpdateSuccess"] != null)
    {
        <div class="profileUpdateSuccessMessaege mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["PasswordUpdateSuccess"]
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <div class="subDiv">
        <div class="row subDivHeaderDiv text-center">
            <p>Kişisel bilgileriniz</p>
        </div>
        <div class="row subDivUserIcon text-center">
            <i class="fas fa-user-circle"></i>
        </div>
        <div class="row personalInformationFormDiv">
            @using (Html.BeginForm("AdminProfile", "Admin", FormMethod.Post, new { @autocomplete = "off" }))
            {
                <div class="form-group pt-3">
                    <label for="firstName">Ad</label>
                    @Html.TextBoxFor(a => a.FirstName, new { @id = "firstName", @class = "form-control", @type = "text", @maxlength = "30" })
                </div>
                <div class="form-group mt-4 pt-2">
                    <label for="lastName">Soyad</label>
                    @Html.TextBoxFor(a => a.LastName, new { @id = "lastName", @class = "form-control", @type = "text", @maxlength = "30" })
                </div>
                <div class="form-group mt-4 pt-2">
                    <label for="lastName">Kullanıcı adı</label>
                    @Html.TextBoxFor(a => a.UserName, new { @id = "phone", @class = "form-control", @type = "text", @maxlength = "30" })
                </div>
                <div class="form-group mt-4 pt-2">
                    <label for="email">Email</label>
                    @Html.TextBoxFor(a => a.Email, new { @id = "email", @class = "form-control", @type = "email", @maxlength = "30" })
                </div>
                <div class="text-center mt-4 mb-3">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a class="btn btn-warning text-white" href="@Url.Action("AdminPasswordUpdate","Admin")">Parola Güncelleme</a>
                </div>
            }
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
@section CssFile{
    <link href="@Url.Content("~/Contents/AdminProfile.css")" rel="stylesheet" type="text/css" /> }

