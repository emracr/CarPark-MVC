@model List<Entities.DTOs.DeletedReservationsDto>
@{
    ViewBag.Title = "ArchiveDeletedReservations";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">

    <div class="subDiv">
        <h2 class="reservationHeaderText">Silinen Rezervasyonlar</h2>
        <table id="tableArchiveDeletedReservations" class="table table-hover">
            <thead>
                <tr>
                    <th>TC</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Araç Markası</th>
                    <th>Araç Konumu</th>
                    <th>Plaka No</th>
                    <th>Başlangıç Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th>Rezervasyon Fiyatı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.TC</td>
                        <td>@reservation.FirstName</td>
                        <td>@reservation.LastName</td>
                        <td>@reservation.VehicleBrand</td>
                        <td>@reservation.VehicleLocation</td>
                        <td>@reservation.PlateNumber</td>
                        <td>@reservation.StartDate.ToShortDateString()</td>
                        <td>@reservation.EndDate.ToShortDateString()</td>
                        <td>@reservation.ReservationPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tableArchiveDeletedReservations').DataTable();
</script>

@section CssFile{
    <link href="@Url.Content("~/Contents/ArchiveDeletedReservations.css")" rel="stylesheet" type="text/css" /> }
