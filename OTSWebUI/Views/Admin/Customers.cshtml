@model List<Entities.DTOs.CustomerDetailsDto>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">

    @if (TempData["CustomerDeleteSuccess"] != null)
    {
        <div class="customerDeleteSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["CustomerDeleteSuccess"]</p>
        </div>
    }
    <div class="subDiv">
        <h2 class="customerHeaderText">Kullanıcılar</h2>
        <table id="tableCustomers" class="table table-hover">
            <thead>
                <tr>
                    <th>TC Kimlik</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Doğum Tarihi</th>
                    <th>Cinsiyet</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.TC</td>
                        <td>@customer.Ad.ToUpper()</td>
                        <td>@customer.Soyad.ToUpper()</td>
                        <td>@customer.Telefon</td>
                        <td>@customer.Email</td>
                        <td>@customer.DogumTarihi.ToShortDateString()</td>
                        <td>@customer.Cinsiyet</td>
                        <td><a href="/Admin/DeleteCustomer/@customer.Id" class="customerDeleteIcon"><i class="fas fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />


<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

@section CssFile{
    <link href="@Url.Content("~/Contents/AdminListCustomers.css")" rel="stylesheet" type="text/css" />

}

<script>
    $('#tableCustomers').DataTable();
</script>