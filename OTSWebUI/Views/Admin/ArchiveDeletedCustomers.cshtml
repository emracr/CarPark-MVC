@model List<Entities.DTOs.DeletedCustomersDto>
@{
    ViewBag.Title = "ArchiveDeletedCustomers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">

    <div class="subDiv">
        <h2 class="customerHeaderText">Silinen Kullanıcılar</h2>
        <table id="tableArchiveDeletedCustomers" class="table table-hover">
            <thead>
                <tr>
                    <th>TC Kimlik</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Doğum Tarihi</th>
                    <th>Cinsiyet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.TC</td>
                        <td>@customer.FirstName.ToUpper()</td>
                        <td>@customer.LastName.ToUpper()</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Email</td>
                        <td>@customer.DateOfBirth.ToShortDateString()</td>
                        <td>@customer.Gender</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tableArchiveDeletedCustomers').DataTable();
</script>

@section CssFile{
    <link href="@Url.Content("~/Contents/ArchiveDeletedCustomers.css")" rel="stylesheet" type="text/css" /> }

