@model List<Entities.DTOs.VehicleBrandDetailsDto>
@{
    ViewBag.Title = "VehicleBrands";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row text-center justify-content-center mainDiv">
    @if (TempData["VehicleBrandAddSuccess"] != null)
    {
        <div class="vehicleBrandCrudResultSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["VehicleBrandAddSuccess"]</p>
        </div>
    }
    @if (TempData["VehicleBrandUpdateSuccess"] != null)
    {
        <div class="vehicleBrandCrudResultSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["VehicleBrandUpdateSuccess"]</p>
        </div>
    }
    @if (TempData["VehicleBrandDeleteSuccess"] != null)
    {
        <div class="vehicleBrandCrudResultSuccessDiv">
            <p><span><i class="fas fa-check-circle"></i></span>@TempData["VehicleBrandDeleteSuccess"]</p>
        </div>
    }
    <div class="subDiv">
        <h2 class="vehicleBrandsHeaderText">Araç Markaları</h2>
        <table id="tableVehicleBrands" class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Araç Markası</th>
                    <th>Araç Tipi</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicleBrand in Model)
                {
                    <tr>
                        <td>@vehicleBrand.Id</td>
                        <td>@vehicleBrand.BrandName</td>
                        <td>@vehicleBrand.VehicleTypeName</td>
                        <td><a href="/Admin/VehicleBrandUpdate/@vehicleBrand.Id" class="vehicleBrandUpdateIcon"><i class="fas fa-edit"></i></a></td>
                        <td><a href="/Admin/VehicleBrandDelete/@vehicleBrand.Id" class="vehicleBrandDeleteIcon"><i class="fas fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="vehicleBrandAddDiv">
        <a href="@Url.Action("VehicleBrandAdd","Admin")" class="btn btn-success">Araç Markası Ekle</a>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />


<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tableVehicleBrands').DataTable();
</script>

@section CssFile{
    <link href="@Url.Content("~/Contents/AdminVehicleBrands.css")" rel="stylesheet" type="text/css" /> }

