@using OTSWebUI.Classes
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr-TR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Otopark Takip Sistemi</title>
    <link rel="stylesheet" href="~/Contents/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <link href="~/content/toastr.css" rel="stylesheet" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    @RenderSection("CssFile", required: false)
</head>
<body>
    <div class="navbarDiv">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4"><a href="@Url.Action("Index","Home")"><img src="~/Images/icon.png" alt="Logo"></a></div>
                    <div class="col-md-8 text-center mt-3 logo-text"><a style="text-decoration:none;" href="@Url.Action("Index","Home")"><p style="font-family:'Harlow Solid';color:white;font-size:20px">Otoparkın kısa yolu</p></a></div>
                </div>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <div class="navbar-nav me-auto mb-2 mb-lg-0">

                    </div>
                    <div class="d-flex navRightDiv">
                        <div>
                            <p class="textUser">@ClassGetUserName.getuserName</p>
                        </div>
                        <div>
                            <a href="@Url.Action("MyProfile","Profile")"><i class="fas fa-user user"></i></a>
                            <a href="@Url.Action("Logout","Login")"><i class="fas fa-sign-out-alt exit"><span>Çıkış</span></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="side-bar active">
        <div class="menu">
            <div class="item"><a href="@Url.Action("GetReservation","Reservation")"><i class="fas fa-car"></i>Rezervasyon yap</a></div>
            <div class="item"><a href="@Url.Action("MyReservation","Reservation")"><i class="fas fa-car"></i>Rezervasyonlarım</a></div>
            <div class="item">
                <a class="sub-btn"><i class="fas fa-cogs"></i>Ayarlar<i class="fas fa-angle-right dropdown"></i></a>
                <div class="sub-menu">
                    <a href="@Url.Action("MyProfile","Profile")" class="sub-item">Profil</a>
                    <a href="@Url.Action("PasswordUpdate","Profile")" class="sub-item">Parola Güncelleme</a>
                </div>
            </div>
        </div>
    </div>

    <div class="renderBodyDiv">
        @RenderBody()
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            //jquery for toggle sub menus
            $('.sub-btn').click(function () {
                $(this).next('.sub-menu').slideToggle();
                $(this).find('.dropdown').toggleClass('rotate');
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

</body>
</html>
<script src="~/Scripts/toastr.js"></script>
